<link rel="manifest" href="manifest.json" crossorigin="use-credentials" />
<link rel="me" href="https://mastodon.social/@rowan_m">
<meta name="fediverse:creator" content="@rowan_m@mastodon.social">
<title>{title}</title>
<meta name="description" content={description}>
